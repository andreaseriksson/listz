<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for list <- @lists do %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.slug %></td>
      <td><%= list.description %></td>

      <td>
        <span><%= link "Show", to: Routes.list_path(@conn, :show, list.slug) %></span>
        <span><%= link "Edit", to: Routes.list_path(@conn, :edit, list.slug) %></span>
        <span><%= link "Delete", to: Routes.list_path(@conn, :delete, list.slug), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New List", to: Routes.list_path(@conn, :new) %></span>
